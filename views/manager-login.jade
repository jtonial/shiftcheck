    meta(charset='utf-8')
    title= site_name
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='nrmitchi')
    link(href='./css/bootstrap.css', rel='stylesheet')
    script(src='./js/jquery.js')
