  body

    #pages
      #loading-page(data-role='page', data-theme='d', data-title='ShiftCheck')
        div(data-role='header', data-theme='a')
          h1 Shiftcheck
        .content(data-role='content')
          i.icon-refresh.icon-4x.icon-spin

      #login-page(data-role='page', data-theme='d', data-title='ShiftCheck Login')
        div(data-role='header', data-theme='a')
          h1 Login
        .content(data-role='content')
          form(id="login-form")
            input#email.input-block-level(type='text', name='email', placeholder='Email')
            input#password.input-block-level(type='password', name='password', placeholder='Password')
            label.checkbox
              input(type="checkbox", value="remember-me")
              | Remember me
            button.btn.btn-primary.input-block-level(type='submit') Login

      #list-page(data-role='page', data-theme='d', data-title='ShiftCheck')
        div(data-role='header', data-theme='a', data-nobackbtn="true")
          h1 Schedules
          a.ui-btn-right(href='#right-panel', data-theme='a', data-icon='arrow-l', data-iconpos='notext', data-shadow='false', data-iconshadow='false') Open right panel
        // /header
        div.content(data-role='content')

          ul#dates(data-role="listview", data-inset="true")

        // /content
        #list-right-panel(data-role='panel', data-display='push', data-position='right', data-theme='c')
          ul(data-role='listview', data-theme='d', data-icon='false')
            li
              a(href='#') Call Work
            li
              a.logout_trigger(href='#') Logout
      #schedule-page(data-role='page', data-theme='d', data-title='Title')
        div(data-role='header', data-theme='a')
          h1.page-header-text Schedule Date
          //- a.ui-icon-nodisc(href='#left-panel', data-theme='d', data-icon='arrow-r', data-iconpos='notext', data-shadow='false', data-iconshadow='false') Open left panel
          a.ui-icon-nodisc(href='#list-page', data-transition='slide', data-direction='reverse', data-theme='a', data-icon='back', data-iconpos='notext', data-shadow='false', data-iconshadow='false')
          a.ui-icon-nodisc(href='#right-panel', data-theme='a', data-icon='arrow-l', data-iconpos='notext', data-shadow='false', data-iconshadow='false')
        // /header
        div.schedule-content(data-role='content')
          h1 A Schedule Goes Here
        // /content
        #schedule-left-panel(data-role='panel', data-display='push', data-theme='a')
          ul#panel-list(data-role='listview', data-theme='a')
            li(data-role='list-divider') Schedules

        #schedule-right-panel(data-role='panel', data-display='push', data-position='right', data-theme='c')
          ul(data-role='listview', data-theme='d', data-icon='false')
            li
              a(href='#') Call Work
            li
              a.logout_trigger(href='#') Logout

