html
  head
    script(src="/js/jquery.js")
    script(src="/js/jquery.mobile-1.3.0.js")
    script(src='/js/jquerymobile.js')

    script(src='/js/underscore.js')
    script(src='/js/backbone.js')
    script(src='/js/handlebars-1.0.0.beta.6.js')
    script(src='/js/d3.v3.min.js')

    script(src='/js/mobile-application-jq.js')

    link(href="/css/bootstrap.css", rel='stylesheet')
    link(href="/css/jquery.mobile-1.3.0.css", rel='stylesheet')

  body

    #pages
      #login-page(data-role='page', data-theme='d', data-title='ShiftCheck Login')
        div(data-role='header', data-theme='a')
          h1 Login
        .content(data-role='content')
          form(id="login-form")
            input#email.input-block-level(type='text', name='email', placeholder='Email')
            input#password.input-block-level(type='password', name='password', placeholder='Password')
            label.checkbox
              input(type="checkbox", value="remember-me")
              | Remember me
            button.btn.btn-primary.input-block-level(type='submit') Login

      #list-page(data-role='page', data-theme='d', data-title='ShiftCheck')
        div(data-role='header', data-theme='a')
          h1 Schedules
          a.ui-icon-nodisc(href='#', data-theme='a', data-icon='none', data-iconpos='notext', data-shadow='false', data-iconshadow='false') Open right panel
          a.ui-icon-nodisc(href='#right-panel', data-theme='a', data-icon='arrow-l', data-iconpos='notext', data-shadow='false', data-iconshadow='false') Open right panel
        // /header
        div.content(data-role='content')

          ul#dates(data-role="listview", data-inset="true")

        // /content
        #list-right-panel(data-role='panel', data-display='push', data-position='right', data-theme='c')

      #schedule-page(data-role='page', data-theme='d', data-title='Title')
        div(data-role='header', data-theme='a')
          h1.page-header-text Schedule Date
          //- a.ui-icon-nodisc(href='#left-panel', data-theme='d', data-icon='arrow-r', data-iconpos='notext', data-shadow='false', data-iconshadow='false') Open left panel
          a.ui-icon-nodisc(href='#list-page', data-transition='slide', data-direction='reverse', data-theme='a', data-icon='back', data-iconpos='notext', data-shadow='false', data-iconshadow='false')
          a.ui-icon-nodisc(href='#right-panel', data-theme='a', data-icon='arrow-l', data-iconpos='notext', data-shadow='false', data-iconshadow='false')
        // /header
        div.schedule-content(data-role='content')
          h1 A Schedule Goes Here
        // /content
        #schedule-left-panel(data-role='panel', data-display='push', data-theme='a')
          ul(data-role='listview', data-theme='a')
            li(data-icon='none')
              a(href='#', data-rel='close') Nothing should be here
            li(data-role='list-divider') Schedules
            li(data-icon='arrow-r').schedule-link
              a(href='#', data-rel='schedule-trigger') January
            li(data-icon='arrow-r').schedule-link
              a(href='#', data-rel='schedule-trigger') February
            li(data-icon='arrow-r').schedule-link
              a(href='#', data-rel='schedule-trigger') March
            li(data-icon='arrow-r').schedule-link
              a(href='#', data-rel='schedule-trigger') April
            li(data-icon='arrow-r').schedule-link
              a(href='#', data-rel='schedule-trigger') May

        #schedule-right-panel(data-role='panel', data-display='push', data-position='right', data-theme='c')
          ul(data-role='listview', data-theme='d', data-icon='false')
            li(data-icon='none')
              a(href='#', data-rel='close') Nothing should be here
            li(data-role='list-divider') Share this page
            li
              a(href='#') Call Work
            li
              a(href='#') Logout

    script(id='login-template', type='text/x-handlebars-template')
      include templates/mobile-login-template-jqm
    script(id='approval-template', type='text/x-handlebars-template')

    script(id='schedule-template', type='text/x-handlebars-template')
      include templates/mobile-schedule-template
    script(id='schedule-template-spreadsheet', type='text/x-handlebars-template')
      include templates/schedule-gdocSpreadsheet-template
    script(id='schedule-template-table', type='text/x-handlebars-template')
      include templates/mobile-schedule-template-table
    script(id='schedule-template-d3', type='text/x-handlebars-template')
      include templates/mobile-schedule-template-d3
    script(id='schedule-list-template', type='text/x-handlebars-template')
      include templates/jquery-mobile-list-page-template

    script(src='/js/models/ScheduleModel.js')
    script(src='/js/models/ShiftModel.js')

    script(src='/js/collections/ScheduleCollection.js')
    script(src='/js/collections/ShiftCollection.js')

    script(src='/js/views/jquerymobile/AccountView.js')
    script(src='/js/views/jquerymobile/LoginView.js')

    script(src='/js/views/jquerymobile/ScheduleView.js')

    script(src='/js/views/jquerymobile/ScheduleBaseView.js')

    script(src='/js/views/jquerymobile/ScheduleListView.js')

    script(src='/js/views/ScheduleViewPDF.js')
    script(src='/js/views/ScheduleViewD3.js')
    script(src='/js/views/ScheduleViewTable.js')
    script(src='/js/views/ScheduleViewSpreadsheet.js')