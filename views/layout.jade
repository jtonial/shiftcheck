
doctype 5
html(lang='en')
  head
    title #{ site_name }
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='#{ site_name } is an application to help business and employees manage schedules')
    meta(name='author', content='nrmitchi')
    // Le styles
    block styles
      link(href='/css/bootstrap.css', rel='stylesheet')
    block scripts
      script(src='/js/vendor/jquery.js')
      script(src='/js/vendor/bootstrap.js')
      script(src='/js/ga.js')

    // <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
    // Le HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
  body
    .navbar.navbar-top.navbar-inverse
      .navbar-inner
        .container-fluid
          a.brand(href='/') #{ site_name }

          ul.nav.pull-right
            li.signin-trigger
              a(href='#signin-modal', data-toggle="modal") Sign In
    block content

    - if (typeof user.user_id == 'undefined')
      include ../lib/auth/views/signin-modal
      mixin signin-modal
