!!! 5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scale=no")
    title #{site_name}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='nrmitchi')
    // Le styles

    block styles
      link(href='/css/bootstrap/bootstrap.css', rel='stylesheet')
      link(href='/css/jquery-ui-1.8.21.custom.css', rel='stylesheet')
      link(href='/css/font-awesome.min.css', rel='stylesheet')
      link(href='/css/style.css', rel='stylesheet')

    block scripts
      script(src='/js/vendor/jquery.js')
      script(src='/js/vendor/handlebars-1.0.0.beta.6.js')
      script(src='/js/vendor/jquery-ui-1.8.21.custom.min.js')
      script(src='/js/vendor/underscore.js')
      script(src='/js/vendor/backbone.js')
      script(src='/js/backbone-pushstate-router.js')

      script(src='/js/vendor/fastclick.js')

      script(src='/js/ga.js')
      script(src="/js/vendor/d3.v3.min.js")

      // Le HTML5 shim, for IE6-8 support of HTML5 elements
      //if lt IE 9
        script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')

  body
    #sidebar.closed
      #sidebar-header.header.clearfix
        block sidebar-header
      #sidebar-content
        block sidebar-content
      #sidebar-footer
        .open
          block sidebar-footer
          
    //- #sidebar-slide-handle
      //- i.icon-chevron-right.icon-2x
    #main-app
      #content-header.header.clearfix
        block content-header
      #content-content
        .container-fluid#content
          block content-content
    - if ( user.employer_id )
      include includes/add-employee-modal
      include includes/account-settings-modal
    - else 


    // Placed at the end of the document so the pages load faster
    script(src='/js/vendor/bootstrap.js')

    block templates

    block end-scripts